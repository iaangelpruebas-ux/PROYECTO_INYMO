//- Estilos de los Tiles de Finanzas (Se mantienen tus estilos premium)
style.
    .finance-link-container {
        text-decoration: none !important;
        color: inherit !important;
        display: block;
        width: 100%;
        transition: all 0.3s ease;
    }
    
    .finance-grid-clean {
        display: grid;
        grid-template-columns: repeat(4, 1fr); 
        gap: 20px;
        margin-top: 10px;
        width: 100%;
    }

    @media (max-width: 1200px) {
        .finance-grid-clean {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .metric-box {
        background: #ffffff;
        padding: 30px;
        border-radius: 20px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        gap: 12px;
        min-height: 150px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .metric-box:hover {
        border-color: #8cc63f;
        transform: translateY(-5px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }

    .metric-tag {
        font-size: 0.7rem;
        font-weight: 800;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .metric-amount {
        font-size: 2.2rem !important;
        font-weight: 800;
        color: #0f172a;
        font-family: 'Roboto Mono', monospace;
    }

    .metric-footer {
        font-size: 0.75rem;
        color: #94a3b8;
        line-height: 1.2;
    }

    /* Bordes laterales de colores */
    .border-bac { border-left: 6px solid #334155; }
    .border-pv { border-left: 6px solid #2563eb; }
    .border-ac { border-left: 6px solid #64748b; }
    .border-ac.overbudget { border-left-color: #dc2626 !important; }
    .border-ev { border-left: 6px solid #8cc63f; }

//- ENVOLVENTE GLOBAL HACIA EL DESGLOSE
a.finance-link-container(href=`/app/proyectos/${p.id}/presupuesto/distribucion` title="Ver desglose detallado de presupuesto")
    .finance-grid-clean
        //- 1. Presupuesto (BAC) - Usamos p.kpi.bac_f del servidor
        .metric-box.border-bac
            span.metric-tag 
                i.bx.bx-wallet
                | Presupuesto (BAC)
            span.metric-amount #{p.kpi ? p.kpi.bac_f : '$0.00'}
            span.metric-footer Inversi√≥n base planificada.

        //- 2. Valor Planeado (PV) - Usamos p.kpi.pv_f del servidor
        .metric-box.border-pv
            span.metric-tag 
                i.bx.bx-line-chart
                | Valor Planeado (PV)
            span.metric-amount(style="color: #2563eb;") #{p.kpi ? p.kpi.pv_f : '$0.00'}
            span.metric-footer Monto total de la venta proyectada.

        //- 3. Costo Real (AC) - Alerta visual si se supera el presupuesto
        .metric-box.border-ac(class=(p.isOverBudget ? 'overbudget' : ''))
            span.metric-tag 
                i.bx.bx-receipt
                | Costo Real (AC)
            span.metric-amount(class=(p.isOverBudget ? 'text-danger' : '')) #{p.kpi ? p.kpi.ac_f : '$0.00'}
            span.metric-footer Gastos acumulados a la fecha.

        //- 4. Valor Ganado (EV) - Utilidad o avance financiero real
        .metric-box.border-ev
            span.metric-tag 
                i.bx.bx-trophy
                | Valor Ganado (EV)
            span.metric-amount(style="color: #8cc63f;") #{p.kpi ? p.kpi.ev_f : '$0.00'}
            span.metric-footer Utilidad real basada en rendimiento.
//- Este archivo crea la división horizontal 30/70 debajo de las finanzas
style.
  .analytics-horizontal-wrapper {
    display: flex;
    gap: 25px; /* Espacio entre columnas */
    width: 100%;
    margin-top: 30px;
    align-items: flex-start; /* Alinea los bloques al inicio */
  }
  
  .col-sidebar-30 {
    flex: 0 0 30%; /* No crece, no se encoge, ocupa exactamente el 30% */
    display: flex;
    flex-direction: column;
    gap: 25px; /* Espacio entre Rendimiento y Riesgos */
  }
  
  .col-main-70 {
    flex: 0 0 70%; /* Ocupa el 70% restante */
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  /* Ajuste para que los canvas no se desborden */
  canvas {
    max-width: 100%;
    height: auto !important;
  }

.analytics-horizontal-wrapper
  //- COLUMNA IZQUIERDA (30%): Rendimiento y Riesgos
  aside.col-sidebar-30
    include ./sidebar_kpi.pug

  //- COLUMNA DERECHA (70%): Gráficas Maestras
  main.col-main-70
    include ./BLOQUE_7/analitica_view.pug